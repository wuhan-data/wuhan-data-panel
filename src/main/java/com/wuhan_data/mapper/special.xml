        </insert>
         
         <!-- 删除一个专题 -->
        <delete id="delete" parameterType="int" >
            delete from WUHAN_DATA.SPECIAL_DETAIL where special_id=#{special_id}  
        </delete>    
        
         <!-- 删除一个专题下一个指标 -->
        <delete id="deleteIndi" parameterType="int" >
            delete from WUHAN_DATA.SPECIAL_DETAIL where id=#{id}  
        </delete>     
         
         <!-- 得到专题列表 -->
        <select id="getlist" parameterType="java.util.Map" resultType="SpecialDetail">
            select special_id,special_name,is_show from WUHAN_DATA.SPECIAL_DETAIL group by special_id,special_name,is_show order by special_id limit #{page.dbIndex},#{page.dbNumber}   
        </select>  

 <select id="getSname" parameterType="int" resultType="String">
            select distinct special_name from WUHAN_DATA.SPECIAL_DETAIL where special_id=#{special_id}
        </select>  
 
        <!--修改专题名称  -->
        <update id="update" parameterType="SpecialDetail" >
            update WUHAN_DATA.SPECIAL_DETAIL set special_name=#{special_name} where special_id=#{special_id}
        </update>
        
        <update id="updateIndi" parameterType="SpecialDetail" >
            update WUHAN_DATA.SPECIAL_DETAIL set indi_name=#{indi_name} where id=#{id}
