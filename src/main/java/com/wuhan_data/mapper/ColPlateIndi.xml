    <mapper namespace="com.wuhan_data.mapper.ColPlateIndiMapper">
    
    <!-- 达梦数据库 -->
            
        <insert id="add" parameterType="ColPlateIndi" >
          <!--  insert into analysis_indi(plate_id,search_indi_id,indi_new_name,indi_old_name,show_type,show_color,is_show) values(#{plate_id},#{search_indi_id},#{indi_new_name},#{indi_old_name},#{show_type},#{show_color},#{is_show}) -->
        insert into WUHAN_DATA."ANALYSIS_INDI"(plate_id,search_indi_id,indi_new_name,indi_old_name,show_type,show_color,is_show) values(#{plate_id},#{search_indi_id},#{indi_new_name},#{indi_old_name},#{show_type},#{show_color},#{is_show})
        </insert>
         
        <delete id="delete" parameterType="int" >
          delete from WUHAN_DATA."ANALYSIS_INDI" where indi_id=#{indi_id}
        </delete>        
         
        <select id="getlist" parameterType="java.util.Map" resultType="ColPlateIndi">
            select * from WUHAN_DATA."ANALYSIS_INDI" where plate_id=#{plate_id} order by indi_id 
        </select>
 
        <update id="update" parameterType="ColPlateIndi" >
            update WUHAN_DATA."ANALYSIS_INDI"
            <set>
            <if test="indi_new_name!=null">indi_new_name=#{indi_new_name},</if>
            <if test="show_color!=null">show_color=#{show_color},</if>         
            <if test="show_type!=null">show_type=#{show_type},</if>
            </set>             
            where plate_id=#{plate_id} and indi_id=#{indi_id}
        </update>
        
         <update id="updateShow" parameterType="ColPlateIndi" >
            update WUHAN_DATA."ANALYSIS_INDI"
            <set>
            is_show=#{is_show}
            </set>
             where indi_id=#{indi_id}
        </update>
                
      <!-- 查询某栏目下的板块总数  用于分页 -->
        <select id="total" resultType="int" parameterType="int">
            select count(*) from  WUHAN_DATA."ANALYSIS_INDI"  where plate_id=#{pid}
        </select>
        
       <select id="searchIndi" resultType="ColPlateIndi" parameterType="String">
        	select search_indi_id, indi_old_name from WUHAN_DATA."SEARCH_INDI" where indi_old_name like  CONCAT('%',#{content},'%') limit 0,20
		</select>
        
 		<select id="getIdAndNew_name" resultType="String" parameterType="String">
        	select distinct  search_indi_id from WUHAN_DATA."SEARCH_INDI" where indi_old_name like  #{indi_old_name}  limit 0,1
		</select>
        
         <select id="getPname" resultType="String" parameterType="int">
        select plate_name from WUHAN_DATA."ANALYSIS_PLATE" where plate_id=#{plate_id}
        </select>

    <update id="updateWeight" parameterType="ColPlateIndi" >
        update WUHAN_DATA."ANALYSIS_INDI"
        <set>
            indi_weight=#{indi_weight},
        </set>
        where indi_id=#{indi_id}
    </update>
    
