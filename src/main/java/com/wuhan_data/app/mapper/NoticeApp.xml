<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
    <mapper namespace="com.wuhan_data.app.mapper.NoticeMapperApp">
        <insert id="add" parameterType="Notice" >
            insert into WUHAN_DATA."NOTICE" (sender_id,receiver_id,content,create_time,title,remarks,is_read) values (#{sender_id},#{receiver_id},#{content},#{create_time},#{title},#{remarks},#{is_read})   
        </insert>
         
         <insert id="addByRole" parameterType="java.util.ArrayList" >
            insert into WUHAN_DATA."NOTICE" (sender_id,receiver_id,content,create_time,title,remarks,is_read) 
            values 
            <foreach collection="list" item="item" index="index" separator=","> 
        	(#{item.sender_id},#{item.receiver_id},#{item.content}, #{item.create_time},#{item.title},#{item.remarks},#{item.is_read}) 
    		</foreach>  
        </insert>
        
        <delete id="delete" parameterType="Notice" >
            delete from WUHAN_DATA."NOTICE" where id= #{id}  
        </delete>
         
        <select id="get" parameterType="_int" resultType="Notice">
            select * from   WUHAN_DATA."NOTICE"  where id= #{id}   
        </select>
 
        <update id="update" parameterType="Notice" >
            update WUHAN_DATA."NOTICE" set content=#{content},receiver_id=#{receiver_id},title=#{title},remarks=#{remarks},is_read=#{is_read} where id=#{id}   
        </update>
        
        <select id="list" resultType="Notice">
            select * from WUHAN_DATA."NOTICE"     
        </select> 
        
        <select id="count" resultType="int">
        	select count(*) from WUHAN_DATA."NOTICE"  
        </select>

        <!-- 列表，可分页 -->
        <select id="listByPage" resultType="Notice" parameterType="java.util.Map">
            select * from WUHAN_DATA."NOTICE"   order by id limit #{page.dbIndex},#{page.dbNumber}
        </select> 
        
        <!--模糊查询 -->
		<select id="searchByContent" parameterType="java.util.Map" resultType="Notice">
            select * from WUHAN_DATA."NOTICE" 
            <where>
            content like concat(concat('%',#{content}),'%')  
            </where>
             order by id limit #{page.dbIndex},#{page.dbNumber}
        </select>
        
        <!-- 模糊查询数量 -->
        <select id="searchCountByContent" resultType="int" parameterType="java.util.Map" >
            select count(*) from WUHAN_DATA."NOTICE" where  content like concat(concat('%',#{content}),'%')  
        </select>
        
        
        
         <select id="getByRid" resultType="Notice">
            select * from WUHAN_DATA."NOTICE" where receiver_id=#{receiver_id}   
        </select>
    

    </mapper>