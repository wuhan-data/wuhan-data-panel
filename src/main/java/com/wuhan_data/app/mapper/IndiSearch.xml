<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
    <mapper namespace="com.wuhan_data.app.mapper.IndiSearchMapper">
       
<!--          获得搜索的所有指标来源 -->
        <select id="searchSource" resultType="String">
            select source from INDEX_LIST group by source   
        </select>
        
<!--         获得该用户的历史搜索 -->
 		  <select id="getHistorySearch" parameterType="_int" resultType="HistorySearch">
            select * from HISTORY_SEARCH where uid= #{uid} order by id DESC limit 5  
        </select>
      
      <select id="searchIndi" resultType="String" parameterType="java.util.Map">
            select indi_name from INDEX_MANAGE where indi_name like CONCAT('%',#{keyWord},'%') and source=#{source} 
        </select> 
        
<!--        获得前十四天的搜索趋势 -->
		 <select id="getTrendList" resultType="String" parameterType="String">
            select keyword from HISTORY_SEARCH where  create_time &lt; #{nowDate} 
        </select> 
         <select id="getTrendList1" resultType="String" parameterType="String">
            select create_time from HISTORY_SEARCH where  create_time &lt; #{nowDate} 
        </select> 
        
        
         <insert id="addSearchHistory" parameterType="HistorySearch" >
            insert into HISTORY_SEARCH (uid,keyword,create_time) values (#{uid},#{keyword},#{create_time})
        </insert>
        
    </mapper>