<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
    <mapper namespace="com.wuhan_data.app.mapper.InitColumnMapper">  
         
        <select id="getOnelist" resultType="com.wuhan_data.pojo.AnalysisManage">
            select weight,type_name from analysis_list group by weight,type_name order by weight
        </select>
        
        <select id="getTwolist" resultType="com.wuhan_data.pojo.AnalysisManage" parameterType="int">
           select id,theme_name,weight,isFavorite from analysis_list where weight=#{weight}
        </select>
             
        <select id="getFavorite" resultType="String" parameterType="String">
        select isFavorite from analysis_list where id=#{cid}
        </select>
        <update id="setFavorite" parameterType="String">
        update analysis_list
      
        <set>
       
         isFavorite="true"
   
        </set>
        where id=#{cid}
        </update>
        <update id="setNotFavorite" parameterType="String">
        update analysis_list
        <set>
        isFavorite="false"
        where id=#{cid}
        </set>
        </update>
        <insert id="colCollect" parameterType="Collect">
        insert into collect(uid,type,index_id,create_time) values (#{uid},#{type},#{index_id},#{create_time})
        </insert>
        <delete id="colDelete" parameterType="int">
        delete from collect where index_id=#{cid}
        </delete>
    </mapper>