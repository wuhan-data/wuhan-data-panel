<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
    <mapper namespace="com.wuhan_data.app.mapper.AppIndexMapper">  
         
        <select id="getlist" resultType="com.wuhan_data.pojo.IndexPic">
            select * from WUHAN_DATA."INDEX_PIC"
        </select>
        
         <select id="getIconList" resultType="com.wuhan_data.pojo.AnalysisIcon">
select b.type_weight iconWeight,a.background,a.icon_name,a.icon_url from WUHAN_DATA."INDEX_ANALYSIS_ICON" a
left join WUHAN_DATA.ANALYSIS_THEME b 
on a.icon_name=b.type_name
group by b.type_weight,a.background,a.icon_name,a.icon_url
order by b.type_weight

        </select>
        
         <select id="getIndexSpecialList" resultType="com.wuhan_data.pojo.IndexSpecial">
            select * from WUHAN_DATA."INDEX_SPECIAL"
        </select>
        
        <select id="getDesc" resultType="com.wuhan_data.pojo.IndexSpecial" parameterType="int">
            select description from WUHAN_DATA."INDEX_SPECIAL" where id=#{id}
        </select>
        
    </mapper>